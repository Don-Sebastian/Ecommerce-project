<!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Categories/</span> Edit Category</h4>

              <!-- Basic Layout -->
              <div class="row">
                <div class="col-xl">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">Edit Category</h5>
                      <small class="text-muted float-end"></small>
                    </div>
                    <div class="card-body">
                      
                      <form action="/admin/edit-category/<%= category._id %>" method="POST" role="form" enctype="multipart/form-data">
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-fullname">Name</label>
                          <input type="text" name="CategoryName" class="form-control" id="basic-default-fullname" value="<%= category.CategoryName %>" required />
                        </div>
                                                
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-message">Description</label>
                          <input
                            id="basic-default-message"  name="CategoryDescription"
                            class="form-control"
                            value="<%= category.CategoryDescription %>" required
                          ></input>
                        </div>

                        <div class="row mb-3">
                          <div class="col">
                            <label class="form-label" for="basic-default-message">Offer</label>
                          <input type="number"
                            id="basic-default-message"  name="CategoryOffer"
                            class="form-control" value="<%=  category.CategoryOffer%>"
                            placeholder="Enter offer in %" 
                          ></input>
                          </div>
                          <div class="col">
                            <label class="form-label" for="basic-default-message">Expiry date</label>
                          <input type="date"
                            id="basic-default-message"  name="CategoryExpiryDate" value="<%=  category.CategoryExpiryDate%>"
                            class="form-control"
                          ></input>
                          </div>
                        </div>

                        <div class="mb-3">
                          <label for="formFileMultiple" class="form-label">Upload image</label>
                          <input class="form-control" name="CategoryImage" type="file" id="formFileMultiple"  multiple />
                          <% if ((category.CategoryImage).length != 0) { %>
                            <div id="<%= category._id %>" style="position: relative;margin-top: 20px;">
                              <img style="width: 10em; height: 10em" src="/uploads/category/<%= category.CategoryImage[0]%>  " alt="<%= category.CategoryImage[0] %>">
                              <button onclick="removeImageInEdit('<%= category.CategoryImage[0]%>', '<%= category._id %>')"  style="position: absolute; color: #ff4c4c; border-radius: 20px;border-color: #ff4c4c;">X</button>
                            </div>
                          <% } %>
                         
                          
                        </div>                                                                          

                        <button type="submit" class="btn btn-primary ">Update Category</button>
                      </form>
                    </div>
                  </div>
                </div>
                  
                  
                </div>
              </div>
            </div>
            <!-- / Content -->

          