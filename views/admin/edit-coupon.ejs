<!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Coupon/</span> Edit Coupon</h4>

              <!-- Basic Layout -->
              <div class="row">
                <div class="col-xl">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">Edit Coupon</h5>
                      <small class="text-muted float-end"></small>
                    </div>
                    <div class="card-body">
                      
                      <form action="/admin/edit-coupon/<%= coupon._id %>" method="POST" role="form" >
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-fullname">Name</label>
                          <input type="text" name="CouponName" class="form-control" id="basic-default-fullname" value="<%= coupon.CouponName %>" required />
                        </div>
                                                
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-message">Description</label>
                          <input
                            id="basic-default-message"  name="CouponDescription"
                            class="form-control"
                            value="<%= coupon.CouponDescription %>" 
                          ></input>
                        </div>

                        <div class="row mb-3">
                          <div class="col">
                            <label class="form-label" for="basic-default-message">Offer</label>
                          <input type="number"
                            id="basic-default-message"  name="CouponOffer"
                            class="form-control" value="<%=  coupon.CouponOffer%>"
                            placeholder="Enter offer in %" 
                          ></input>
                          </div>
                          <div class="col">
                            <label class="form-label" for="basic-default-message">Expiry date</label>
                          <input type="date"
                            id="basic-default-message"  name="CouponExpiryDate" value="<%=  coupon.CouponExpiryDate%>"
                            class="form-control"
                          ></input>
                          </div>
                        </div>

                        <input
                            id="basic-default-message"  name="CouponStatus"
                            class="form-control"
                            value="<%= coupon.CouponStatus %>" hidden
                          ></input>
                                                                                                

                        <button type="submit" class="btn btn-primary ">Update coupon</button>
                      </form>
                    </div>
                  </div>
                </div>
                  
                  
                </div>
              </div>
            </div>
            <!-- / Content -->

          