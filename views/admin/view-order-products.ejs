<!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Products /</span> All Products</h4>

              <!-- Basic Bootstrap Table -->
              <div class="card">
                <h5 class="card-header">User List</h5>
                <div class="table-responsive text-nowrap">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Image</th>
                        <th>Options</th>
                        <th>Cancel</th>
                        
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                    <%let index = 1; for( let i = 0; i < products.length; i++ ) { %>
                        <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= index %></strong></td>
                        <td><%= products[i].products.productDetails.Name %></td>
                        <td><%= products[i].products.productDetails.Name %></td>
                        <td><%= products[i].products.productDetails.Name %></td>
                        <td><%= products[i].products.quantity%></td>
                        <td> Rs.<%= products[i].products.quantity * products[i].products.productDetails.Price%></td>
                        <td >
                            <% if (products[i].products.productStatus == "ordered") { %>
                            <span class="text-warning" id="<%= products[i].products.productDetails._id%>-orderProductStatus">Ordered</span>
                            <% } else if(products[i].products.productStatus == "shipped") { %>
                            <span class="text-secondary" id="<%= products[i].products.productDetails._id%>-orderProductStatus">Shipped</span>
                            <% } else if(products[i].products.productStatus == "delivered") { %>
                            <span class="text-primary " id="<%= products[i].products.productDetails._id%>-orderProductStatus">Delivered</span>
                            <% } else if(products[i].products.productStatus == "canceled") { %>
                            <span class="text-danger " id="<%= products[i].products.productDetails._id%>-orderProductStatus">Canceled</span>
                            <% } else if(products[i].products.productStatus == "completed") { %>
                            <span class="text-success " id="<%= products[i].products.productDetails._id%>-orderProductStatus">Completed</span>
                            <% } else if(products[i].products.productStatus == "returned") { %>
                            <span class="text-info " id="<%= products[i].products.productDetails._id%>-orderProductStatus">Returned</span>
                            <% } else if(products[i].products.productStatus == "refunded") { %>
                            <span class="text-info " id="<%= products[i].products.productDetails._id%>-orderProductStatus">Refunded</span>
                            <% } %> 
                            </td>
                        <td><img style="width: 3em; height: 3em" src="../uploads/<%= products[i].products.productDetails.Image[0] %>" alt="<%=  products[i].products.productDetails.Image[0]%>"></td>
                        <td scope="col-5">
                            <select
                            class="form-select"
                            aria-label="Default select example"
                            id="<%= order._id%>-<%= products[i].products.productDetails._id%>-select"
                            onchange="changeProductOrderStatus('<%= products[i].products.productDetails._id%>', '<%= order._id%>')"
                            >
                            <option selected><%= products[i].products.productStatus%></option>
                            <% if (products[i].products.productStatus == "ordered" || products[i].products.productStatus == "shipped") { %>
                                <option value="shipped">Shipped</option>
                                <option value="delivered">Delivered</option>
                            <% } else if (products[i].products.productStatus == "delivered"){%>
                                <option value="refunded">Refunded</option>
                                <option value="returned">Returned</option>
                            <% }  %>
                            
                            
                            </select>
                        </td>
                        <td><% if (products[i].products.productStatus == "ordered" || products[i].products.productStatus == "shipped"  || products[i].products.productStatus == "refunded" ) { %>
                            <button type="button" class="btn btn-outline-dark" onclick="changeProductOrderStatusButton('<%= products[i].products.productDetails._id%>', '<%= order._id%>', 'canceled')">Cancel</button>
                            <%} else if (products[i].products.productStatus == "delivered"){%>
                                <button type="button" class="btn btn-outline-secondary" onclick="changeProductOrderStatusButton('<%= products[i].products.productDetails._id%>', '<%= order._id%>', 'completed')">Completed</button>
                            <%} %>
                        </td>
                        
                      </tr>
                    <% index++; } %>
                       
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Basic Bootstrap Table -->

              
              <!--/ Responsive Table -->
            </div>
            <!-- / Content -->
          </div>