<link rel="stylesheet" href="../assets/css/style.css" />

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
      <span class="text-muted fw-light">Users /</span> All Users
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
      <h5 class="card-header">Order List</h5>
      <div class="table-responsive text-nowrap">
        <table class="table">
          <thead>
            <tr>
              <!-- <th>Date</th> -->
              <!-- <th>UserId</th> -->
              <th>Address</th>
              <th>Payment Method</th>
              <th>Products</th>
              <th>Total Amount</th>
              <th>Status</th>
              <th>Options</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            <% orders.forEach(element => { %>
            <tr>
              <!-- <td>
                <i class="fab fa-angular fa-lg text-danger me-3"></i>

                <strong> <%#= element.Date %> </strong>
              </td> -->
              <!-- <td><span><%#= element.userId%></span></td> -->
              <td>
                <pre>
<%= element.deliveryDetails.name%>,<%= element.deliveryDetails.address%>,<%= element.deliveryDetails.city%>,
<%= element.deliveryDetails.state%>,<%= element.deliveryDetails.country%>. Pin code: <%= element.deliveryDetails.zip%>
                </pre>
              </td>
              <td><%= element.paymentMethod%></td>
              <td><%= element.products.lenght%> items</td>
              <td><%= element.totalAmount%></td>

              <td>
                <% if (element.orderStatus == "ordered") { %>
                <span class="badge bg-label-warning me-1" id="<%= element._id%>-orderStatus-ordered">Ordered</span>
                <% } else if(element.orderStatus == "shipped") { %>
                <span class="badge bg-label-secondary me-1" id="<%= element._id%>-orderStatus-shipped">Shipped</span>
                <% } else if(element.orderStatus == "delivered") { %>
                <span class="badge bg-label-primary me-1" id="<%= element._id%>-orderStatus-delivered">Delivered</span>
                <% } else if(element.orderStatus == "canceled") { %>
                <span class="badge bg-label-danger me-1" id="<%= element._id%>-orderStatus-canceled">Canceled</span>
                <% } else if(element.orderStatus == "completed") { %>
                <span class="badge bg-label-success me-1" id="<%= element._id%>-orderStatus-completed">Completed</span>
                <% } else if(element.orderStatus == "returned") { %>
                <span class="badge bg-label-info me-1" id="<%= element._id%>-orderStatus-returned">Returned</span>
                <% } else if(element.orderStatus == "refunded") { %>
                <span class="badge bg-label-info me-1" id="<%= element._id%>-orderStatus-refunded">Refunded</span>

                <% } %>
              </td>

              <td scope="col-5">
                <select
                  class="form-select"
                  aria-label="Default select example"
                  id="<%= element._id%>-select"
                  onchange="changeOrderStatus('<%= element._id%>')"
                >
                  <option selected><%= element.orderStatus%></option>
                  <option value="shipped">Shipped</option>
                  <option value="delivered">Delivered</option>
                  <option value="canceled">Canceled</option>
                  <option value="completed">Completed</option>
                  <option value="returned">Returned</option>
                  <option value="refunded">Refunded</option>
                </select>
              </td>
            </tr>

            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Basic Bootstrap Table -->

    <!--/ Responsive Table -->
  </div>
  <!-- / Content -->
</div>
