<link rel="stylesheet" href="../assets/css/style.css" />

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
      <span class="text-muted fw-light">Orders /</span> All Orders
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
      <h5 class="card-header">Order List</h5>
      <div class="table-responsive text-nowrap">
        <table id="orderListAdmin" class="table">
          <thead>
            <tr>
              <th>Date</th>
              <!-- <th>UserId</th> -->
              <th>Address</th>
              <th>Payment Method</th>
              <th>Products</th>
              <th>Total Amount</th>
              <th>Status</th>
              <th>View</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            <% orders.forEach(element => { %>
            <tr>
              <!-- <td>
                <i class="fab fa-angular fa-lg text-danger me-3"></i>

                <strong> <%#= element.Date %> </strong>
              </td> -->
              <!-- <td><span><%#= element.userId%></span></td> -->
              <td>
                <% let orderDate = element.Date%> 
                <% const [Date, Month, Year] = orderDate.toLocaleDateString().split('/') %>
                <% const dateNow =  Date + '-' + Month + '-'+ Year %> 
                <%= dateNow %> 
              </td>
              <td>
                <pre>
<%= element.deliveryDetails.name%>,
<%= element.deliveryDetails.address%>,
<%= element.deliveryDetails.city%>..
Pin:<%= element.deliveryDetails.zip%>.
                </pre>
              </td>
              <td><%= element.paymentMethod%></td>
              <% noOfProduts = element.products.length %> 
              <td><%= noOfProduts%> item</td>
              <td><%= element.totalAmount%></td>

              <td>
                <% if (element.orderStatus == "success") { %>
                <span class="badge bg-label-success me-1" id="<%= element._id%>-orderStatus-success">Success</span>
                <% } else if(element.orderStatus == "failed") { %>
                <span class="badge bg-label-danger me-1" id="<%= element._id%>-orderStatus-failed">Failed</span>
                

                <% } %>
              </td>

              
              <td><a href="/admin/view-AdminProductOrder/<%= element._id %>">View Product</a></td>
            </tr>

            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Basic Bootstrap Table -->

    <!--/ Responsive Table -->
  </div>
  <!-- / Content -->
</div>
