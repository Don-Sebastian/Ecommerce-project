<!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Users /</span> All Users</h4>

              <!-- Basic Bootstrap Table -->
              <div class="card">
                <h5 class="card-header">User List</h5>
                <div class="table-responsive text-nowrap">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Options</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      {{#each products}}
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{inc @index}}</strong></td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Price}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.Description}}</td>
                        <td><img style="width: 3em; height: 3em" src="/uploads/{{this.Image.[0]}}" alt=""></td>
                        <td>
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.Name}} ?')">Delete</a>
                        </td>
                        
                      </tr>
                      <tr>
                      {{/each}}
                       
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Basic Bootstrap Table -->

              
              <!--/ Responsive Table -->
            </div>
            <!-- / Content -->
          </div>