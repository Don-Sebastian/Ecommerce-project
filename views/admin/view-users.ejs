<!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Users /</span> All Users</h4>

              <!-- Basic Bootstrap Table -->
              <div class="card">
                <h5 class="card-header">User List</h5>
                <div class="table-responsive text-nowrap">
                  <table id="viewUsersAdmin" class="table">
                    <thead>
                      <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Profile</th>
                        <th>Status</th>
                        <th>Block / Unblock</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      <%let index = 1; userDetails.forEach(element => {  %>
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong> <%= index %> </strong></td>
                        <td> <%=  element.Name%> </td>
                        <td><%= element.Email%></td>
                        <td>
                          <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                            <li
                              data-bs-toggle="tooltip"
                              data-popup="tooltip-custom"
                              data-bs-placement="top"
                              class="avatar avatar-xs pull-up"
                              title="Lilian Fuller"
                            >
                              <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                            
                          </ul>
                        </td>
                        <% if (element.Blocked) { %>
                        <td><span class="badge bg-label-warning me-1">Blocked</span></td>
                        <% } else { %>
                        <td><span class="badge bg-label-primary me-1">Active</span></td>
                        <% } %>
                        <td>
                          <% if (element.Blocked) { %>
                          <a href="/admin/unblock-user/<%=  element._id%>" class="btn btn-outline-danger">Unblock</a>
                          <% } else { %>
                          <a href="/admin/block-user/<%=  element._id%>" class="btn btn-outline-secondary" onclick="return confirm('Are you sure you want to block <%= element.Name %> ?')">Block</a>
                          <% } %>

                        </td>
                      </tr>
                      
                      
                      <% index++;  }) %>  
                    
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Basic Bootstrap Table -->

              
              <!--/ Responsive Table -->
            </div>
            <!-- / Content -->
          </div>