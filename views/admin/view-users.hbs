<!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Users /</span> All Users</h4>

              <!-- Basic Bootstrap Table -->
              <div class="card">
                <h5 class="card-header">User List</h5>
                <div class="table-responsive text-nowrap">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Profile</th>
                        <th>Status</th>
                        <th>Block / Unblock</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      {{#each userDetails}}
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{inc @index}}</strong></td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Email}}</td>
                        <td>
                          <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                            <li
                              data-bs-toggle="tooltip"
                              data-popup="tooltip-custom"
                              data-bs-placement="top"
                              class="avatar avatar-xs pull-up"
                              title="Lilian Fuller"
                            >
                              <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                            
                          </ul>
                        </td>
                        {{#if this.Blocked}}
                        <td><span class="badge bg-label-warning me-1">Blocked</span></td>
                        {{else}}
                        <td><span class="badge bg-label-primary me-1">Active</span></td>
                        {{/if}}

                        <td>
                          {{#if this.Blocked}}
                          <a href="/admin/unblock-user/{{this._id}}" class="btn btn-outline-danger">Unblock</a>
                          {{else}}
                          <a href="/admin/block-user/{{this._id}}" class="btn btn-outline-secondary" onclick="return confirm('Are you sure you want to block {{this.Name}} ?')">Block</a>
                          {{/if}}

                          {{!-- <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                              <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                              <a class="dropdown-item" href="javascript:void(0);"
                                ><i class="bx bx-edit-alt me-1"></i> Block</a
                              >
                              <a class="dropdown-item" href="javascript:void(0);"
                                ><i class="bx bx-trash me-1"></i> Unblock</a
                              >
                            </div>
                          </div> --}}
                        </td>
                      </tr>
                      
                      {{/each}}
                        
                    
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Basic Bootstrap Table -->

              
              <!--/ Responsive Table -->
            </div>
            <!-- / Content -->
          </div>