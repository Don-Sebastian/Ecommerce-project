<!-- Shoping Cart -->
<div class="bg0 p-t-75 p-b-85" id="checkout-form">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
        <div class="m-l-25 m-r--38 m-lr-0-xl">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Select Address</h5>
            </div>

            <div class="card-body">
              <!-- Display Address -->
              <div class="m-l-25">
                <% for( let i = 0; i < address.length; i++ ) { %>
                 <% if (i == 0){ %>
                <div class="form-check m-b-22">
                  <% addressId = address[i].Address._id + "-" + i%>
                  <input
                    
                    class="form-check-input"
                    type="radio"
                    name="AddressRadio" value="<%= address[i].Address._id%>"
                    id="<%= address[i].Address._id%>"
                    checked
                  />
                  <label class="form-check-label" for="flexRadioDefault">
                    <span
                      ><%= address[i].Address.name %>, <%=
                      address[i].Address.address %>, <%= address[i].Address.city
                      %>, <%= address[i].Address.state %>, <%=
                      address[i].Address.zip %>, <%= address[i].Address.country
                      %></span
                    >
                  </label>
                </div>
                <% } else {%>
                <div class="form-check m-b-22">
                  <% addressId = address[i].Address._id + "-" + i%>
                  <input
                    
                    class="form-check-input"
                    type="radio"
                    name="AddressRadio" value="<%= address[i].Address._id%>"
                    id="<%= address[i].Address._id%>" checked
                  />
                  <label class="form-check-label" for="flexRadioDefault">
                    <span
                      ><%= address[i].Address.name %>, <%=
                      address[i].Address.address %>, <%= address[i].Address.city
                      %>, <%= address[i].Address.state %>, <%=
                      address[i].Address.zip %>, <%= address[i].Address.country
                      %></span
                    >
                  </label>
                </div>
                <% } %> 
                <% } %>

                <!-- <div class="form-check m-b-22">
                  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                  <label class="form-check-label" for="flexRadioDefault2">
                    Default checked radio
                  </label>
                </div> -->
              </div>

              <span
                >Want to add new address?<button
                  class="m-b-5"
                  type="button"
                  data-toggle="collapse"
                  data-target="#addressCollapse"
                >
                  Add Address
                </button></span
              >
              <div id="addressCollapse">
                <form
                  method="POST"
                  class="w-100 rounded-1 p-4 border bg-white"
                  action="/add-address"
                >
                  <label class="d-block mb-4">
                    <span class="form-label d-block">Your name</span>
                    <input
                      name="name"
                      type="text"
                      class="form-control"
                      placeholder="Don Seb"
                    />
                  </label>

                  <label class="d-block mb-4">
                    <span class="form-label d-block">Address </span>
                    <input
                      name="address"
                      type="text"
                      class="form-control"
                      placeholder=""
                    />
                  </label>

                  <label class="d-block mb-4">
                    <span class="form-label d-block">City</span>
                    <input
                      name="city"
                      type="text"
                      class="form-control"
                      placeholder=""
                    />
                  </label>

                  <label class="d-block mb-4">
                    <span class="form-label d-block">State/Province</span>
                    <input
                      name="state"
                      type="text"
                      class="form-control"
                      placeholder=""
                    />
                  </label>

                  <label class="d-block mb-4">
                    <span class="form-label d-block">Zip/Postal code</span>
                    <input
                      name="zip"
                      type="text"
                      class="form-control"
                      placeholder=""
                    />
                  </label>

                  <label class="d-block mb-4">
                    <span class="form-label d-block">Country</span>
                    <input
                      name="country"
                      type="text"
                      class="form-control"
                      placeholder=""
                    />
                  </label>

                  <label class="d-block mb-4">
                    <span class="form-label d-block">Telephone</span>
                    <input
                      name="telephone"
                      type="text"
                      class="form-control"
                      placeholder=""
                    />
                  </label>

                  <label class="d-block mb-4">
                    <span class="form-label d-block">Delivery information</span>
                    <textarea
                      name="message"
                      class="form-control"
                      rows="3"
                      placeholder="floor/door lock code/etc."
                    ></textarea>
                  </label>

                  <input
                    type="text"
                    name="userId"
                    id=""
                    value="<%= user._id %>"
                    hidden
                  />

                  <div class="mb-3">
                    <button
                      type="submit"
                      class="flex-c-m stext-110 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer"
                      style="width: 50%"
                    >
                      Add Address
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
        <div
          class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm"
        >
          <h4 class="mtext-109 cl2 p-b-30">Payment Method</h4>
          <hr />
          <!-- <form action="" id="checkout-form"> -->
            <div class="flex-w flex-t bor12 p-t-15 p-b-30">
              <div class="payment m-l-25">
                <div class="form-check m-b-10">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="payment-method"
                    value="COD"
                    id=""
                    checked
                  />
                  <label class="form-check-label" for="flexRadioDefault">
                    <span>COD</span>
                  </label>
                </div>
                <div class="form-check m-b-10">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="payment-method"
                    value="razorpay"
                    id=""
                  />
                  <label class="form-check-label" for="flexRadioDefault">
                    <span>Razorpay</span>
                  </label>
                </div>
                <div class="form-check m-b-10">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="payment-method"
                    value="paypal"
                  />
                  <label class="form-check-label" for="flexRadioDefault">
                    <span>Paypal</span>
                  </label>
                </div>
                
              </div>
            </div>

            <div class="flex-w flex-t p-t-27 p-b-33">
              <div class="size-208">
                <span class="mtext-101 cl2"> Total: </span>
              </div>

              <div class="size-209 p-t-1">
                <span class="mtext-110 cl2"> Rs.<%= total %> </span>
              </div>
            </div>
            <% console.log(user._id) %> 
            <button
              class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer"
              id="proceedToCheckout"
              onclick="proceedToCheckout('<%=user._id%>')"
            >
              Proceed to Checkout
            </button>
          <!-- </form> -->
        </div>
      </div>
    </div>
  </div>
</div>

