
<section class="vh-100 mt-5">
  <div class="container-fluid h-custom ">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form action="/loginOTP" method="post" role="form" enctype="application/x-www-form-urlencoded">
            
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <h1 class=" fw-normal mb-0 me-3">OTP Log In</h1>
            
            </div>
            
            

          <div class="divider d-flex align-items-center my-2">
            {{!-- <p class="text-center fw-bold mx-3 mb-0">Or</p> --}}
          </div>

            {{#if loginErr}}
            <div class="alert alert-danger" role="alert">
                {{loginErr}}
            </div>
            {{/if}}

          <!-- Phone Number input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form3Example3">Enter Phone Number</label>
            <input type="text" id="form3Example3" class="form-control form-control-lg" name="phonenumber"
              placeholder="0000000000" required/>
            
          </div>


        

           <div class="d-flex justify-content-between align-items-center">
            
          </div>

          <div class="text-center text-lg-start mt-1 pt-2">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Enter OTP</button>
                  
          </div>

        </form>
      </div>
    </div>
  </div>
  <div
    class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-2 px-4 px-xl-5 bg-primary fixed-bottom">
    <!-- Copyright -->
    <div class="text-white mb-3 mb-md-0">
      Copyright Â© 2020. All rights reserved.
    </div>
  </div>
</section>