<!-- Product Detail -->
	<section class="sec-product-detail bg0 p-t-65 p-b-60">
		<div class="container">
			<div class="row">
               
				<div class="col-md-6 col-lg-7 p-b-30">
					<div class="p-l-25 p-r-30 p-lr-0-lg">
						<div class="wrap-slick3 flex-sb flex-w">
							<div class="wrap-slick3-dots"></div>
							<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

							<div class="slick3 gallery-lb">
								<div class="item-slick3" data-thumb="../uploads/<%= product[0].Image[0] %> ">
									<div class="wrap-pic-w pos-relative">
										<img class="zoom" src="../uploads/<%= product[0].Image[0] %>" alt="<%= product[0].Image[0] %>data-zoom-image="<%= product[0].Image[0] %>">

										<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="../uploads/<%= product[0].Image[0] %>">
											<i class="fa fa-expand"></i>
										</a>
									</div>
								</div>
                                
								<% if (product[0].Image[1] != undefined) {%> 
								<div class="item-slick3" data-thumb="../uploads/<%= product[0].Image[1] %>">
									<div class="wrap-pic-w pos-relative">
