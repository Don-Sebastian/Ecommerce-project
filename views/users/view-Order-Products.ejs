<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85 m-t-40">
  <div class="container">
    <% if (products.length == 0) { %>
    <h1 class="text-center mt-5">No Products in Order</h1>
    <% } else { %>
    <div class="row">
      <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
        <div class="m-l-25 m-r--38 m-lr-0-xl">
          <div class="wrap-table-shopping-cart">
            <table class="table-shopping-cart">
              <tr class="table_head">
                <th class="column-1">Product</th>
                <th class="column-2">Name</th>
                <th class="column-3">Price</th>
                <th class="column-4">Quantity</th>
                <th class="column-5">Total</th>
                <th class="column-6">Status</th>
                <th class="column-7">Option</th>
              </tr>
              <% for( let i = 0; i < products.length; i++ ) { %>

              <tr
                class="table_row"
                id="<%= products[i].products.productDetails._id %>-tr"
              >
                <td class="column-1">
                  <div class="how-itemcart1">
                    <img
                      src="../uploads/<%= products[i].products.productDetails.Image[0] %>"
                      alt="IMG"
                    />
                  </div>
                </td>
                <td class="column-2">
                  <%= products[i].products.productDetails.Name %>
                </td>
                <td class="column-3">
                  <% if (products[i].products.totalAfterDiscount === null) { %>
                  <span
                    id="<%= products[i].products.productDetails._id %>-Price"
                    ><%= products[i].products.productDetails.Price%></span
                  >
                  <% } else { %> Rs.<sapn
                    id="<%= products[i].products.productDetails._id %>-Price"
                    style="font-weight: bold"
                  >
                    <%= products[i].products.priceAfterDiscount%>
                  </sapn>
                  <sapn class="m-l-10" style="opacity: 0.6; font-size: small"
                    ><del>
                      Rs.<%= products[i].products.productDetails.Price%></del
                    >
                  </sapn>
                  <% } %>
                </td>
                <td class="column-4">
                  <%= products[i].products.quantity%> item
                </td>
                <td class="column-5">
                  <% if (products[i].products.totalAfterDiscount === null) { %>
                  Rs.<span
                    id="<%= products[i].products.productDetails._id%>-productAmount"
                    ><%= products[i].products.totalQuantityPrice%>
                  </span>
                  <% } else { %> Rs.<span
                    id="<%= products[i].products.productDetails._id%>-productAmount"
                    ><%= products[i].products.totalAfterDiscount%>
                  </span>
                  <% } %>
                </td>

                <td class="column-6">
                  <% if (products[i].products.productStatus == "ordered") { %>
                  <span
                    class="text-warning"
                    id="<%= products[i].products.productDetails._id%>-orderProductStatus"
                    >Ordered</span
                  >
                  <% } else if(products[i].products.productStatus == "shipped")
                  { %>
                  <span
                    class="text-secondary"
                    id="<%= products[i].products.productDetails._id%>-orderProductStatus"
                    >Shipped</span
                  >
                  <% } else if(products[i].products.productStatus ==
                  "delivered") { %>
                  <span
                    class="text-primary"
                    id="<%= products[i].products.productDetails._id%>-orderProductStatus"
                    >Delivered</span
                  >
                  <% } else if(products[i].products.productStatus == "canceled")
                  { %>
                  <span
                    class="text-danger"
                    id="<%= products[i].products.productDetails._id%>-orderProductStatus"
                    >Canceled</span
                  >
                  <% } else if(products[i].products.productStatus ==
                  "completed") { %>
                  <span
                    class="text-success"
                    id="<%= products[i].products.productDetails._id%>-orderProductStatus"
                    >Completed</span
                  >
                  <% } else if(products[i].products.productStatus == "returned")
                  { %>
                  <span
                    class="text-info"
                    id="<%= products[i].products.productDetails._id%>-orderProductStatus"
                    >Returned</span
                  >
                  <% } else if(products[i].products.productStatus == "refunded")
                  { %>
                  <span
                    class="text-info"
                    id="<%= products[i].products.productDetails._id%>-orderProductStatus"
                    >Refunded</span
                  >
                  <% } %>
                </td>

                <td class="column-7">
                  <% if (products[i].products.productStatus == 'ordered' ||
                  products[i].products.productStatus == 'shipped') { %>
                  <button
                    type="button"
                    class="btn btn-outline-secondary"
                    style="border-radius: 5px"
                    onclick="changeProductOrder('<%= products[i].products.productDetails._id%>', '<%= order._id%>', 'canceled')"
                  >
                    Cancel
                  </button>
                  <% } else if(products[i].products.productStatus ==
                  'delivered') { %>
                  <button
                    type="button"
                    class="btn btn-outline-dark"
                    style="border-radius: 5px"
                    onclick="changeProductOrder('<%= products[i].products.productDetails._id%>', '<%= order._id%>', 'returned')"
                  >
                    Return
                  </button>
                  <% } %>
                </td>
              </tr>
              <% } %>
            </table>
          </div>
        </div>
      </div>

      <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50"></div>
    </div>
    <% } %>
  </div>
</form>
