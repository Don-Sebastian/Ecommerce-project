<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
  <div class="container" style="margin-top: 100px; margin-bottom: 60px">
    <% if (products.length == 0) { %>
    <h1 class="text-center mt-5">Cart is Empty</h1>
    <% } else { %>
    <div class="row">
      <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
        <div class="m-l-25 m-r--38 m-lr-0-xl">
          <div class="wrap-table-shopping-cart">
            <table class="table-shopping-cart">
              <tr class="table_head">
                <th class="column-1">Product</th>
                <th class="column-2">Name</th>
                <th class="column-3">Price</th>
                <th class="column-4">Quantity</th>
                <th class="column-5">Total</th>
                <th class="column-8">Remove</th>
              </tr>
              <% (products).forEach(element => { %>
              <tr class="table_row" id="<%= element.productDetails._id %>-tr">
                <td class="column-1">
                  <div class="how-itemcart1">
                    <img
                      src="../uploads/<%= element.productDetails.Image[0] %>"
                      alt="IMG"
                    />
                  </div>
                </td>
                <td class="column-2"><%= element.productDetails.Name %></td>
                <td class="column-3">
                  <% if (element.productDetails.Price == element.priceAfterDiscount) { %>
                  <span id="<%= element.productDetails._id %>-Price"
                    ><%= element.productDetails.Price%></span
                  >
                  <% } else { %> Rs.<sapn
                    id="<%= element.productDetails._id %>-Price"
                    style="font-weight: bold"
                  >
                    <%= element.priceAfterDiscount%>
                  </sapn>
                  <sapn class="m-l-10" style="opacity: 0.6; font-size: small"
                    ><del> Rs.<%= element.productDetails.Price%></del>
                  </sapn>
                  <% } %>
                </td>
                <td class="column-4">
                  <div class="wrap-num-product flex-w m-l-auto m-r-0">
                    <% if (element.quantity == 1) { %>
                    <div
                      class="btn btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m disabled"
                      id="minus"
                      onclick="changeQuantity('<%= element._id%>', '<%= element.productDetails._id%>','<%= user._id%>', -1)"
                    >
                      <i class="fs-16 zmdi zmdi-minus"></i>
                    </div>
                    <% } else { %>
                    <div
                      class="btn btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m"
                      id="minus"
                      onclick="changeQuantity('<%= element._id%>', '<%= element.productDetails._id%>','<%= user._id%>', -1)"
                    >
                      <i class="fs-16 zmdi zmdi-minus"></i>
                    </div>
                    <% } %>

                    <!-- <input class="mtext-104 cl3 txt-center num-product" id="<% element.productDetails._id %>" type="number" name="num-product1" value= <%= element.quantity %> > -->
                    <span
                      class="mtext-104 cl3 txt-center num-product"
                      id="<%= element.productDetails._id %>"
                      ><%= element.quantity %></span
                    >

                    <div
                      class="btn btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m"
                      onclick="changeQuantity('<%= element._id%>', '<%= element.productDetails._id%>','<%= user._id%>', 1)"
                    >
                      <i class="fs-16 zmdi zmdi-plus"></i>
                    </div>
                  </div>
                </td>
                <td class="column-5">
                  <% if (element.totalAfterDiscount === null) { %> Rs.<span
                    id="<%= element.productDetails._id%>-productAmount"
                    ><%= element.totalQuantityPrice%>
                  </span>
                  <% } else { %> Rs.<span
                    id="<%= element.productDetails._id%>-productAmount"
                    ><%= element.totalAfterDiscount%>
                  </span>
                  <% } %>
                </td>
                <td class="column-8">
                  <a
                    class="fa fa-trash"
                    onclick="deleteFromCart('<%= element._id%>', '<%= element.productDetails._id%>')"
                  ></a>
                </td>
              </tr>
              <% }) %>
            </table>
          </div>

          <div
            class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm"
          ></div>
        </div>
      </div>

      <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
        <div
          class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm"
        >
          <h4 class="mtext-109 cl2 p-b-30">Cart Totals</h4>

